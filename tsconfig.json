{
	"compilerOptions": {
		"outDir": "dist",
		"noImplicitAny": true,
		"strictNullChecks": true,
		"module": "commonjs",
		"target": "es6",
		"forceConsistentCasingInFileNames": true,
		"newLine": "LF",
		"declaration": true,
		"noImplicitThis": true,
		"pretty": true,
		"strict": true,
		"removeComments": false,
		"skipLibCheck": true,
		"importHelpers": true,
		"moduleResolution": "node",
		"esModuleInterop": true
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules"]
}
