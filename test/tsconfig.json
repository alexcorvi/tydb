{
	"compilerOptions": {
		"noImplicitAny": true,
		"strictNullChecks": true,
		"module": "commonjs",
		"target": "es6",
		"forceConsistentCasingInFileNames": true,
		"newLine": "LF",
		"noImplicitThis": true,
		"pretty": true,
		"strict": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"esModuleInterop": true
	},
	"include": ["./**/*"],
	"exclude": ["node_modules"]
}
