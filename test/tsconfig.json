{
	"compilerOptions": {
		"noImplicitAny": true,
		"strictNullChecks": true,
		"module": "commonjs",
		"target": "es6",
		"forceConsistentCasingInFileNames": true,
		"newLine": "LF",
		"noImplicitThis": true,
		"pretty": true,
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": "./",
		"sourceMap": true,
		"paths": {
			"@core": ["../src/core"],
			"@types": ["../src/types"]
		}
	},
	"include": ["./**/*"],
	"exclude": ["node_modules"]
}
