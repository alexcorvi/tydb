{
	"compilerOptions": {
		"outDir": "./src/db/lib/",
		"noImplicitAny": true,
		"strictNullChecks": true,
		"module": "commonjs",
		"target": "es6",
		"forceConsistentCasingInFileNames": true,
		"newLine": "LF",
		"noImplicitThis": true,
		"pretty": true,
		"strict": true,
		"removeComments": false,
		"esModuleInterop": true,
		"allowJs": true,
		"skipLibCheck": true
	},
	"include": ["./src/db/lib-ts/**/*"],
	"exclude": ["node_modules"]
}
